generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  folders  Folder[]
  files    File[]
  sessions Session[]
}

model Folder {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  files     File[]
  shareLink ShareLink?
}

model File {
  id         String   @id @default(uuid())
  name       String
  path       String
  size       Int
  uploadTime DateTime @default(now())
  folder     Folder?  @relation(fields: [folderId], references: [id])
  folderId   String?
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  url        String?  // cloud URL
}

model ShareLink {
  id        String   @id @default(uuid())
  folder    Folder   @relation(fields: [folderId], references: [id])
  folderId  String   @unique
  expiresAt DateTime
}

model Session {
  id        String   @id @default(uuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}
